  <script>
    // JavaScript for search functionality
    const searchInput = document.getElementById('look_tv_here');
    const items = document.querySelectorAll('.livebbtv-item');

    searchInput.addEventListener('input', function(event) {
      const searchTerm = event.target.value.toLowerCase();
      
      items.forEach(item => {
        const name = item.querySelector('.livebbtv-name').textContent.toLowerCase();
        
        if (name.includes(searchTerm)) {
          item.style.display = 'block';
        } else {
          item.style.display = 'none';
        }
      });
    });

    // JavaScript for category filter
    const ddlFilter = document.getElementById('ddlAge');

    ddlFilter.addEventListener('change', function(event) {
      const selectedGenre = event.target.value;
      
      items.forEach(item => {
        const genre = item.getAttribute('data-genre');
        
        if (selectedGenre === '0' || selectedGenre === genre) {
          item.style.display = 'block';
        } else {
          item.style.display = 'none';
        }
      });
    });
  </script>
